<h2 class="page-headerr">Register</h2>
{{#if user}}
        <div class="alert alert-danger">Username has been taken already try new</div> 
{{/if}}
{{#if mail}}
        <div class="alert alert-danger">Email has been taken already try new</div> 
{{/if}} 
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name">
  </div>
  <div class="form-group">
    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input type="email" class="form-control" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2">
  </div>
  <div class="form-group">
    <label>Annual Total Income</label>
    <input type="income" class="form-control" placeholder="Total Annual Income" name="aIncome">
  </div>
  <div class="form-group">
    <label>Monthly Income</label>
    <input type="income" class="form-control" placeholder="After Taxes Monthly" name="income">
  </div>
  <div class="form-group">
    <label>Monthly Expenses</label>
    <input type="income" class="form-control" placeholder="Monthly Expenses" name="expenses">
  </div>
  <div class="form-group">
    <label>Savings</label>
    <input type="income" class="form-control" placeholder="Savings" name="savings">
  </div>
  <div class="form-group">
    <label>Long Term Goal #1</label>
    <input type="text" class="form-control" placeholder="Long Term Goal #1" name="ltg1">
  </div>
  <div class="form-group">
    <label>Long Term Goal #2</label>
    <input type="text" class="form-control" placeholder="Long Term Goal #2" name="ltg2">
  </div>
  <div class="form-group">
    <label>Short Term Goal #1</label>
    <input type="text" class="form-control" placeholder="Short Term Goal #1" name="stg1">
  </div>
  <div class="form-group">
    <label>Short Term Goal #2</label>
    <input type="text" class="form-control" placeholder="Short Term Goal #2" name="stg2">
  </div>
  <div class="form-group">
    <label>Short Term Goal #3</label>
    <input type="text" class="form-control" placeholder="Short Term Goal #3" name="stg3">
  </div>
  <div class="form-group">
    <label>Short Term Goal #4</label>
    <input type="text" class="form-control" placeholder="Short Term Goal #4" name="stg4">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>